---
import * as CONTENT from "../pages/content"
---

<!-- Hero section -->
<header class="mx-auto py-8">
  <article
    class="grid grid-cols-3 grid-rows-1 w-[98vw] max-w-4xl px-8"
  >
    <div
      class="rounded-full border-primary self-end shadow-2xl md:w-24 w-20 aspect-square"
    >
      <img
        src="/profile.jpg"
        alt="profile_picture"
        class="object-cover w-full h-full rounded-full grayscale-[50] hover:grayscale-0"
      />
    </div>

    <div></div>

    <div class="grid text-right self-center whitespace-nowrap">
      <h1 class="text-3xl text-text">{CONTENT.MY_FULLNAME}</h1>
      <h2 class="text-lg text-text/90">{CONTENT.MY_CURRENT_OCUPATION}</h2>
      <a
        href={CONTENT.MY_GEOLOCATION}
        target="_blank"
        class="hover:text-blue-300 flex items-center justify-self-end"
      >
        {CONTENT.MY_LOCATION}
      </a>
      <a
        href={CONTENT.MY_WEBSITE}
        target="_self"
        class="hover:text-blue-300 flex items-center justify-self-end"
      >
        {CONTENT.MY_WEBSITE}
      </a>
    </div>
  </article>
</header>
