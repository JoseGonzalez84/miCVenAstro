---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"Una introducción sobre mi..."} icon={"ic:outline-badge"}>
    {CONTENT.ABOUT_ME.map((item) => {
        return item+'<br>'
      })
    }
  </AccordionLayout>
    <AccordionLayout title={"Mi trabajo actual"} icon={"mdi:briefcase-check"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={item.from}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Experiencia Laboral"} icon={"mdi:briefcase-clock"}>
      {
        CONTENT.former_work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Participación en proyectos"} icon={"ion:md-build"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe="2022-2023"
              description={item.description}
              tags={item.tech}
              url={item.url}
              url_name={"Open Project"}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Formación"} icon={"mdi:education-outline"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Certificaciones"} icon={"mdi:certificate-outline"}>
      {
        CONTENT.certificates.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.issued}
              description={item.org}
              tags={item.description}
              url={item.url}
              url_name={"View Certificate"}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Logros"} icon={"mdi:flag-checkered"}>
      {
        CONTENT.achievements.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.year}
              description={item.decription}
              tags=""
              url="#"
              url_name=""
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Contacta conmigo"} icon={"mdi:human-greeting-proximity"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <Card
              title={""}
              timeframe=""
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
    </AccordionLayout>
</ul>
