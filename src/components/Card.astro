---
import { Icon } from "astro-icon";
const { timeframe, title, description, url, tags, url_name, onlyOneCard } = Astro.props
var cardBorder = onlyOneCard === "true" ? '' : 'border-b-[1px]'
var cardClass = "grid grid-cols-3 grid-rows-1 w-full p-2 place-items-center border-dashed py-4 border-text/25 "+cardBorder
---

<div class={cardClass}>
    <div class="self-start justify-self-start">
        <p class="text-text/50 text-base">
            { timeframe }
        </p>
    </div>

    <div class="self-start justify-self-start text-left">
        <p class="text-lg text-text/80">{title}</p>
        <p class="text-sm text-text/70">{description}</p>
        <sub class="text-xs text-text/60">{tags}</sub>
    </div>

    <div class="self-start justify-self-end">
        <a href={url} target="_blank" class="text-base text-right text-text/60 hover:text-palleteTooBright flex justify-center items-center">
            {url_name}
            {
               url !== "#" && <Icon name="ic:baseline-link" class="w-4 h-4 ml-2" />
            }
        </a>
    </div>
</div>